<Window x:Class="BlinkerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlinkerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="342" Width="552" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="160*"/>
            <RowDefinition Height="59*"/>
        </Grid.RowDefinitions>

        <Button x:Name="BtnStartBlink" Grid.Row="0" Grid.Column="0" Content="" Background="Red" Click="BtnStartBlink_Click"/>
        <Button x:Name="BtnStopBlink" Grid.Row="0" Grid.Column="1" Content="" Background="green" Click="BtnStopBlink_Click" />
        <Label Content="Start Blinking!" Grid.Row="1" FontSize="20" 
               VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label Content="Stop Blinking!" Grid.Column="1" Grid.Row="1" FontSize="20" 
               VerticalAlignment="Center" HorizontalAlignment="Center"/>


    </Grid>
</Window>
